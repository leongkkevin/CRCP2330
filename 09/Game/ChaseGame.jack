
class ChaseGame {
   field Square square; // the square of this game
   field Square circle;

   field int directionSqu;
   field int directionCir;
   field int direction;

   field int squarePts;
   field int circlePts;

   constructor ChaseGame new() {
      let square = Square.new(0, 0, 30);
      let circle = Square.new(0, 100, 30);

      let direction = 0;
      let directionSqu = 0; 
      let directionCir = 0;

      return this;
   }

   method void dispose() {
      do square.dispose();
      do circle.dispose();
      do Memory.deAlloc(this);
      return;
   }

   method void moveItems() {
      if (direction = 1) { do square.moveUp(); }
      if (direction = 2) { do square.moveDown(); }
      if (direction = 3) { do square.moveLeft(); }
      if (direction = 4) { do square.moveRight(); }
      if (direction = 5) { do circle.moveUp(); }
      if (direction = 6) { do circle.moveDown(); }
      if (direction = 7) { do circle.moveLeft(); }
      if (direction = 8) { do circle.moveRight(); }
      do Sys.wait(5); 
      return;
   }

   method void run() {
      var char key;

      var boolean exit;
      let exit = false;
      
      while (~exit) {

         while (key = 0) {
            let key = Keyboard.keyPressed();
            do moveItems();
         }
         if (key = 81)  { let exit = true; }     // q key

         if (key = 131) { let direction = 1; }   // up arrow
         if (key = 133) { let direction = 2; }   // down arrow
         if (key = 130) { let direction = 3; }   // left arrow
         if (key = 132) { let direction = 4; }   // right arrow
         
         if (key = 87) { let direction = 5; }   // W
         if (key = 83) { let direction = 6; }   // S
         if (key = 65) { let direction = 7; }   // A
         if (key = 68) { let direction = 8; }   // D

         while (~(key = 0)) {
            let key = Keyboard.keyPressed();
            do moveItems();
         }
     }
     return;
   }
}
