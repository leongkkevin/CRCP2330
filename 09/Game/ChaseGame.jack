
class ChaseGame {
   field Square square; // the square of this game
   field Square circle;
   field Random random;

   field int direction;

    field int points;

   field int randNum;

   constructor ChaseGame new() {
       do Output.printString("WELCOME TO THE CHASE GAME! This is you ->");
       do Output.println();
       do Output.printString("Tag the other box 10 times to win!");
       do Output.println();

      let square = Square.new(425, 0, 30);
      let circle = Square.new(50, 200, 30);

      let direction = 0;

      let randNum = 0;

      let points = 0;

      return this;
   }

   method void dispose() {
      do square.dispose();
      do circle.dispose();
      do Memory.deAlloc(this);
      return;
   }

   method void moveItems() {
      if (direction = 5) { do square.moveUp(); }
      if (direction = 6) { do square.moveDown(); }
      if (direction = 7) { do square.moveLeft(); }
      if (direction = 8) { do square.moveRight(); }
      do Sys.wait(5); 
      if (randNum = 1) { do circle.moveUp();} 
        if (randNum = 2) { do circle.moveDown();} 
        if (randNum = 3) { do circle.moveLeft();}  
        if (randNum = 4) { do circle.moveRight();}

      return;
   }

    method boolean checkX(){
        var boolean c1;
        var boolean c2;
    
        if( (square.getX() + 15) > (circle.getX()) ){
            let c1 = true;
        } else {
            let c1 = false;
        }
        if( (square.getX() + 15) < (circle.getX() + 30) ){
            let c2 = true;
        } else {
            let c2 = false;
        }


        return c1 & c2;
            
    }

    method boolean checkY(){
        var boolean c1;
        var boolean c2;
    
        if( (square.getY() + 15) > (circle.getY()) ){
            let c1 = true;
        } else {
            let c1 = false;
        }
        if( (square.getY() + 15) < (circle.getY() + 30) ){
            let c2 = true;
        } else {
            let c2 = false;
        }


        return c1 & c2;
    }

   method boolean detection() {
       
       if( (checkX()) & (checkY()) ){
        return true;
       } else {
        return false;
       }
       
    }
       

   method void run() {
      var char key;

      var boolean exit;
      let exit = false;
      
      while (~exit) {

          if (detection()){
              let points = points + 1;
                  do Output.printString("TAGGED!");
                  do Output.println();

          }


         while (key = 0) {
            let key = Keyboard.keyPressed();
            do moveItems();
         }

         if (key = 81)  { let exit = true; }     // q key

         if (key = 131) { let direction = 5; }   // up arrow
         if (key = 133) { let direction = 6; }   // down arrow
         if (key = 130) { let direction = 7; }   // left arrow
         if (key = 132) { let direction = 8; }   // right arrow

         let randNum = random.randRange(4);
         
         while (~(key = 0)) {
            let key = Keyboard.keyPressed();
            do moveItems();
         }

         if(points = 10){
            do Output.printString("YOU WIN!");
            let exit = true;
        }
     }
     return;
   }
}
